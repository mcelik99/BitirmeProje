@using BitirmeProjesi.Models.Dto;

@model List<Period>

<h1 class="page-header">
   Aktif Dönem Listesi
</h1>

<div class="table-responsive">
   
    <table class="table table-striped table-bordered table-hover mt-10" style="margin-top:10px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Dönem Adı</th>
            <th>Başlangış Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.StartAt</td>
                <td>@item.FinishAt</td>
                <td class="text-center">
                    <a asp-area="Student" asp-controller="Period" asp-action="Participant" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <i class="fa fa-plus"></i>
                        Başvuru Yap
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>




