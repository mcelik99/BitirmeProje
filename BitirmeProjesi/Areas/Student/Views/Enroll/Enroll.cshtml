@using BitirmeProjesi.Models.Dto;
@model EnrollViewModel

<form asp-action="Enroll" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Subject" class="control-label">Konu</label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Öğretmen Tercihleri</label>
        <div>
            @for (var i = 0; i < Model.Users.Count; i++)
            {
                <div class="form-check">
                    <input type="checkbox" id="user-@i" name="SelectedUserIds" value="@Model.Users[i].Value" />
                    <label for="user-@i">@Model.Users[i].Text</label>
                </div>
            }
        </div>
        <span asp-validation-for="SelectedUserIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedPeriodId" class="control-label">Dönem</label>
        <select asp-for="SelectedPeriodId" class="form-control" asp-items="Model.Periods"></select>
        <span asp-validation-for="SelectedPeriodId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>



