<h1 class="page-header">
    Kullanıcı Listesi
</h1>
@model List<BitirmeProjesi.Models.User>

<div class="table-responsive">
    <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-success btn-sm">
        <i class="fa fa-plus"></i>
        Yeni Kayıt
    </a>
    <table class="table table-striped table-bordered table-hover mt-10" style="margin-top:10px;">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Danışman</th>
            <th style="width:200px;"></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>
                    @if (user.IsAdvisor == true)
                    {
                        <span class="badge bg-primary">Evet</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Hayır</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                        Detay
                    </a>
                </td>
            </tr>
        }
    </table>
    <form asp-area="Admin" asp-controller="User" asp-action="UpdateQuotaForAllUsers" method="post" class="form-inline">
        <div class="form-group">
            <label >Akademisyen kota yenile.</label>
            <label  for="quotaInput">Kota:</label>
            <div class="input-group">
                <input type="number" class="form-control"  id="quotaInput" name="quota" required >
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Kota Güncelle</button>
    </form>
</div>
