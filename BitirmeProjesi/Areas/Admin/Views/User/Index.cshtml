<h1 class="page-header">
    User Listesi
</h1>
@model List<BitirmeProjesi.Models.User>

<div class="table-responsive">
    <a asp-area="Admin" asp-controller="User" asp-action="Create" class="btn btn-success btn-sm">
        <i class="fa fa-plus"></i>
        Yeni Kayıt
    </a>
    <table class="table table-striped table-bordered table-hover mt-10" style="margin-top:10px;">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th></th>

        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
            
              

                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">
                        Detay
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
