<h1 class="page-header">
    Dönem Listesi
</h1>
@model List<BitirmeProjesi.Models.Period>

<div class="table-responsive">
    <a asp-area="Admin" asp-controller="Period" asp-action="Create" class="btn btn-success btn-sm">
        <i class="fa fa-plus"></i>
        Yeni Kayıt
    </a>
    <table class="table table-striped table-bordered table-hover mt-10" style="margin-top:10px;">
        <tr>
            <th>Ad</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Oluşturan Kullanıcı</th>
            <th>Oluşturma Tarihi</th>
            <th></th>

        </tr>
        @foreach (var period in Model)
        {
            <tr>
                <td>@period.Name</td>
                <td>@period.StartAt</td>
                <td>@period.FinishAt</td>
                <td>@period.CreateAt</td>
                <td>@period.CreateUser.Name</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@period.Id" class="btn btn-sm btn-primary">
                        Detay
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
