<h1 class="page-header">
    Dönem Listesi
</h1>
@model List<BitirmeProjesi.Models.Period>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover mt-10" style="margin-top:10px;">
        <tr>
            <th>Ad</th>
            <th>Bitiş Tarihi</th>
            <th></th>
        </tr>
        @foreach (var period in Model)
        {
            <tr>
                <td>@period.Name</td>
                <td>@period.FinishAt</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@period.Id" class="btn btn-sm btn-primary">
                        Detay
                    </a>

                    <a asp-action="Participants" asp-route-id="@period.Id" class="btn btn-sm btn-primary">
                        Talep Listesi
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
