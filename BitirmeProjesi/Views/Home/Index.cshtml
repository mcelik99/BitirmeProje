@{
    ViewData["Title"] = "Bitirme Takip Sistemi";
}
<div class="container" style="margin-top: 5%;">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <div class=" panel panel-default">
                <div class="panel-body text-center">
                    <i class="fa fa-user-tie" style="font-size: 200px;"></i>
                    <br />
                    <a asp-controller="Login" asp-action="Academician" class="btn btn-primary">
                        Akademisyen  Giriş
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class=" panel panel-default">
                <div class="panel-body text-center">
                    <i class="fa fa-user-graduate" style="font-size: 200px;"></i>
                    <br />
                    <a asp-controller="Login" asp-action="Student" class="btn btn-primary">
                        Öğrenci   Giriş
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class=" panel panel-default">
                <div class="panel-body text-center">
                    <i class="fa fa-user-plus" style="font-size: 200px;"></i>
                    <br />
                    <a asp-controller="Register" asp-action="Student" class="btn btn-primary">
                        Öğrenci   Kayıt
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>